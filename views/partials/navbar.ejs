<nav>
  <div class="left">
    <img src="/assets/logo-unj.png" alt="Logo" />
    <span>E-Ruang UNJ</span>
  </div>

  <div class="menu">
    <a href="/">Beranda</a>
    <a href="#">Daftar Ruangan</a>
    <a href="/history">Riwayat</a>
  </div> 

  <div class="buttons">
    <% if (isLoggedIn) { %>
      <a href="/logout"><button class="btn login">Log Out</button></a>
      
    <% } else { %>
      <a href="/register"><button class="btn">Register</button></a>
      <a href="/login"><button class="btn login">Log In</button></a>
    <% } %>
  </div>

  <script>
    // Ambil path URL saat ini (misal: "/history" atau "/")
    const currentPath = window.location.pathname;
    
    // Ambil semua elemen link di dalam menu
    const menuLinks = document.querySelectorAll('.menu a');

    menuLinks.forEach(link => {
      // Ambil nilai href dari link tersebut
      const linkPath = link.getAttribute('href');

      // Cek apakah href link sama dengan URL saat ini
      // ATAU jika URL saat ini kosong/index, tandai link yang mengarah ke '/'
      if (linkPath === currentPath) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  </script>
</nav>