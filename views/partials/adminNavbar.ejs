    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Ambil semua elemen dengan class dropdown-toggle
            const dropdowns = document.querySelectorAll(".dropdown-toggle");

            dropdowns.forEach(dropdown => {
                dropdown.addEventListener("click", function () {
                    // 1. Toggle class 'active' pada tombol yang diklik (untuk putar panah)
                    this.classList.toggle("active");

                    // 2. Ambil elemen sub-menu tepat setelah tombol ini
                    const submenu = this.nextElementSibling;

                    // 3. Toggle class 'show' untuk memicu animasi CSS
                    if (submenu.classList.contains("show")) {
                        submenu.classList.remove("show");
                    } else {
                        submenu.classList.add("show");
                    }
                });
            });
        });
    </script>
