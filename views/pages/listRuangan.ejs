<section class="stats-wrap" style="margin-top: 40px; padding: 28px;">
    <div class="stat">
        <div class="icon"></div>
        <div class="text">
            <div class="label">Ruangan Tersedia</div>
            <div class="value">16</div>
        </div>
    </div>


  <div class="stat">
      <div class="icon"></div>
      <div class="text">
          <div class="label">Ruangan Dipakai</div>
          <div class="value">20</div>
      </div>
  </div>


  <div class="stat">
      <div class="icon"></div>
      <div class="text">
          <div class="label">Total Ruangan</div>
          <div class="value">36</div>
      </div>
  </div>
</section>

<section class="rooms-page">
  <div class="page-header">
    <h2>List Ruangan</h2>
    <p>Peminjaman dan perizinan dilakukan secara online</p>
  </div>

  <div class="filters-wrap">
    <div class="filters-card">
      <div class="filters-left">
        <div class="filter-icon" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 5H21" stroke="#2B77E6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 12H16" stroke="#2B77E6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M10 19H14" stroke="#2B77E6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>

        <div class="filters-title">
          <div class="title-strong">Filters</div>
        </div>
      </div>

      <form action="/listRuangan" method="GET" class="filters-controls">
  
        <label class="search">
          <span class="search-icon" aria-hidden="true">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#6B7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 21l-4.35-4.35"/>
              <circle cx="11" cy="11" r="6"/>
            </svg>
          </span>
          <input 
            type="text" 
            name="search" 
            placeholder="Cari ruangan..." 
            value="<%= typeof query !== 'undefined' ? query.search : '' %>"
          />
        </label>

        <select name="gedung" onchange="this.form.submit()">
          <option value="">Semua Gedung</option>
          <!-- <option value="Gedung GDS" <%= (typeof query !== 'undefined' && query.gedung === 'Gedung GDS') ? 'selected' : '' %>>Gedung GDS</option> -->
        </select>


        <% if (typeof query !== 'undefined' && (query.search || query.gedung || query.kapasitas)) { %>
          <a href="/listRuangan" style="font-size: 14px; text-decoration: none; color: #d32f2f; align-self: center; margin-left: 8px;">
              Reset
          </a>
        <% } %>

      </form>
    </div>
  </div>

  <%- include('../partials/card') %>
</section>

<script src="/js/index-page.js"></script>