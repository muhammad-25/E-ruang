<div class="stats-container">
    <div class="card blue">
        <h3>Peminjaman (bulan ini)</h3>
        <div class="number"><%= stats.totalMonth %></div>
    </div>
    <div class="card red">
        <h3>Menunggu Pengajuan</h3>
        <div class="number"><%= stats.totalPending %></div>
    </div>
    <div class="card orange">
        <h3>Ruangan Tersedia</h3>
        <div class="number"><%= stats.totalAvailableRooms %></div>
    </div>
</div>

<div class="recent-requests">
    <h2 class="section-title">Belum diproses</h2>
    
    <table>
        <thead>
            <tr>
                <th>Nama Pemohon</th>
                <th>Ruang</th>
                <th>Tanggal</th>
                <th>Waktu</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (requests.length > 0) { %>
                <% requests.forEach(req => { %>
                    <tr>
                        <td><%= req.user_name %></td>
                        <td><%= req.room_name %></td>
                        <td><%= req.date %></td>
                        <td><%= req.time %></td>
                        <td><span class="badge pending">Menunggu</span></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5" style="text-align: center; padding: 20px;">Tidak ada pengajuan yang perlu diproses.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>