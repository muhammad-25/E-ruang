<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Saya - E-RUANG</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="stylesheet" href="/css/user-profile.css">
</head>
<body>
    <div class="profile-container">
        <div class="profile-content-wrapper">
            
            <div class="profile-header">
                
                <div class="profile-avatar" style="position: relative; display: inline-block;">
                    <% if (user.photo) { %>
                        <img src="/uploads/profiles/<%= user.photo %>" alt="Foto Profil" id="previewImage">
                    <% } else { %>
                        <img src="https://ui-avatars.com/api/?name=<%= user.name %>&background=4A90E2&color=fff" alt="Foto Profil" id="previewImage">
                    <% } %>

                    <form action="/profile/upload-photo" method="POST" enctype="multipart/form-data" id="formUploadFoto">
                        <label for="inputFoto" style="
                            position: absolute; bottom: 0; right: 0;
                            background: #4A90E2; color: white;
                            width: 32px; height: 32px; border-radius: 50%;
                            display: flex; align-items: center; justify-content: center;
                            cursor: pointer; border: 2px solid white; box-shadow: 0 2px 5px rgba(0,0,0,0.2);
                        ">
                            <i class="fa-solid fa-camera" style="font-size: 14px;"></i>
                        </label>
                        <input type="file" name="foto" id="inputFoto" style="display: none;" onchange="document.getElementById('formUploadFoto').submit()">
                    </form>
                </div>

                <div style="margin-left: 15px;"> <h2 style="margin: 0;"><%= user.name %></h2>
                    </div>
            </div>

            <div class="profile-card">
                
                <div class="profile-tabs">
                    <button class="tab-btn active" onclick="openTab('biodata')">
                        <i class="fa-regular fa-id-card"></i> Biodata Diri
                    </button>
                    <button class="tab-btn" onclick="openTab('riwayat')">
                        <i class="fa-solid fa-clock-rotate-left"></i> Riwayat Peminjaman
                    </button>
                    <button class="tab-btn" onclick="openTab('keamanan')">
                        <i class="fa-solid fa-shield-halved"></i> Keamanan akun
                    </button>
                </div>

                <div id="biodata" class="tab-content active">
                    <form action="/profile/update" method="POST">
                        
                        <div class="form-group">
                            <label>Nama Lengkap</label>
                            <input type="text" name="name" value="<%= user.name %>" required>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" name="email" value="<%= user.email %>" placeholder="contoh@email.com">
                        </div>

                        <div class="form-group">
                            <label>NIM / NIDN</label>
                            <input type="text" value="1234567890" disabled style="cursor: not-allowed; background-color: #f5f5f5;">
                        </div>

                        <div class="form-group">
                            <label>Status</label>
                            <input type="text" value="Mahasiswa" disabled style="
                                background-color: #e3f2fd; 
                                color: #1565c0; 
                                font-weight: 600; 
                                border: 1px solid #90caf9;
                                cursor: default;
                            ">
                        </div>

                        <div class="form-group">
                            <label>Program Studi</label>
                            <select name="prodi">
                                <option value="Ilmu Komputer" selected>Ilmu Komputer</option>
                                <option value="Sistem Informasi">Sistem Informasi</option>
                                <option value="Pendidikan TI">Pendidikan TI</option>
                                <option value="Rekayasa Perangkat Lunak">Rekayasa Perangkat Lunak</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Nomor WhatsApp (Aktif)</label>
                            <input type="tel" name="phone" placeholder="Contoh: 08123456789" value="">
                        </div>
                        
                        <button type="submit" class="btn-save">
                            <i class="fa-regular fa-floppy-disk"></i> Simpan Biodata
                        </button>
                    </form>
                </div>

                <div id="riwayat" class="tab-content">
                    <h3 style="margin-bottom: 20px; color: #333; font-size: 18px;">Pengajuan Terakhir Anda</h3>
                    
                    <div class="history-table-container">
                        <table class="history-table">
                            <thead>
                                <tr>
                                    <th>Tanggal Pinjam</th>
                                    <th>Ruangan</th>
                                    <th>Keperluan</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>28 Nov 2025, 09:00</td>
                                    <td><strong>Lab Komputer A</strong></td>
                                    <td>Praktikum Mandiri PPW</td>
                                    <td><span class="status-badge status-menunggu">Menunggu</span></td>
                                </tr>
                                <tr>
                                    <td>20 Nov 2025, 13:00</td>
                                    <td><strong>Ruang Sidang Lt.3</strong></td>
                                    <td>Rapat Himpunan</td>
                                    <td><span class="status-badge status-disetujui">Disetujui</span></td>
                                </tr>
                                <tr>
                                    <td>15 Nov 2025, 08:00</td>
                                    <td><strong>Aula Serbaguna</strong></td>
                                    <td>Seminar Proposal</td>
                                    <td><span class="status-badge status-ditolak">Ditolak</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                     </div>

                <div id="keamanan" class="tab-content">
                    <form action="/profile/security" method="POST">
                        <div class="form-group">
                            <label>Password Saat Ini</label>
                            <input type="password" name="currentPassword" placeholder="Masukkan password lama">
                        </div>
                        <div class="form-group">
                            <label>Password Baru</label>
                            <input type="password" name="newPassword" placeholder="Masukkan password baru">
                        </div>
                        <div class="form-group">
                            <label>Konfirmasi Password Baru</label>
                            <input type="password" name="confirmPassword" placeholder="Ulangi password baru">
                        </div>

                        <button type="submit" class="btn-save">
                            <i class="fa-solid fa-lock"></i> Ubah Password
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script>
        function openTab(tabName) {
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.classList.remove('active'));
            const buttons = document.querySelectorAll('.tab-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            const activeBtn = Array.from(buttons).find(btn => btn.getAttribute('onclick').includes(tabName));
            if(activeBtn) activeBtn.classList.add('active');
        }
    </script>
</body>
</html>