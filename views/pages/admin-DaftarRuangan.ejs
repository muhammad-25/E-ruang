<link rel="stylesheet" href="/css/admin-DaftarRuangan.css" />
<script src="https://unpkg.com/lucide@latest"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<main class="main-container">
    <header class="main-header">
        <div>
            <h1 class="header-title">List Ruangan</h1>
            <p class="header-subtitle">Kelola ketersediaan dan detail ruangan kantor.</p>
        </div>
        <div class="admin-badge">
            <div class="admin-avatar">A</div>
            <span class="admin-name"><%= typeof user !== 'undefined' ? user.name : 'Admin' %></span>
        </div>
    </header>

    <div class="content-area">
        <div class="actions-bar">
            <div class="search-container">
                <i data-lucide="search" class="search-icon"></i>
                <input type="text" id="searchInput" placeholder="Cari nama ruangan..." class="search-input">
            </div>
            <a href="/add" class="add-button">
                <i data-lucide="plus" class="w-5 h-5"></i>
                Tambah Ruangan
            </a>
        </div>

        <div class="table-card">
            <div class="table-wrapper">
                <table class="data-table">
                    <thead class="table-head">
                        <tr>
                            <th>Info Ruangan</th>
                            <th>Kapasitas</th>
                            <th>Fasilitas</th>
                            <th>Status</th>
                            <th style="text-align: right;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody id="roomTableBody">
                        <% if (rooms.length === 0) { %>
                            <tr>
                                <td colspan="5" style="text-align:center; padding: 20px;">
                                    Belum ada data ruangan.
                                </td>
                            </tr>
                        <% } else { %>
                            <% rooms.forEach(room => { %>
                            <tr class="room-row">
                                <td>
                                    <div class="room-info">
                                        <% if(room.thumbnail) { %>
                                            <img src="/uploads/rooms/<%= room.thumbnail %>" alt="<%= room.name %>" class="room-image">
                                        <% } else { %>
                                            <div class="room-image" style="background:#eee; display:flex; align-items:center; justify-content:center;">
                                                <i data-lucide="image" style="color:#ccc"></i>
                                            </div>
                                        <% } %>
                                        <div>
                                            <div class="room-name"><%= room.name %></div>
                                            <div class="room-type"><%= room.gedung %> - <%= room.nomor_ruang %></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="capacity-info">
                                        <i data-lucide="users" class="w-4 h-4"></i>
                                        <span><%= room.capacity %> Orang</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="facilities-list">
                                        <% room.facilities.slice(0, 2).forEach(fac => { %>
                                            <span class="facility-badge"><%= fac.nama || fac.name %></span>
                                        <% }) %>
                                        
                                        <% if (room.facilities.length > 2) { %>
                                            <span class="facility-badge facility-count">+<%= room.facilities.length - 2 %></span>
                                        <% } %>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge status-available">
                                        Tersedia
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/edit?id=<%= room.id %>" class="action-button edit-button" title="Edit">
                                            <i data-lucide="edit-2" class="w-4 h-4"></i>
                                        </a>
                                        <button onclick="deleteRoom('<%= room.id %>')" class="action-button delete-button" title="Hapus">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <div class="pagination-bar">
                <span id="showingText">Menampilkan <%= rooms.length %> data</span>
            </div>
        </div>
    </div>
</main>

<script src="/js/admin-DaftarRuangan.js"></script>