<link rel="stylesheet" href="/css/detail_ruangan.css" />

<div class="wrap">
    <div class="grid">
        <main>
        <div class="card">
            <div class="media" id="media">
                <% 
                   // Helper URL Gambar
                   const mainImgUrl = mainPhoto ? `/uploads/rooms/${mainPhoto.filename}` : 'https://placehold.co/800x600?text=No+Image';
                %>
                <img id="mainImg" src="<%= mainImgUrl %>" alt="<%= room.name %>">
                
                <div class="thumbs" id="thumbs">
                    <% if (photos && photos.length > 0) { %>
                        <% photos.forEach((photo, index) => { %>
                            <div class="thumb <%= (mainPhoto && photo.id === mainPhoto.id) ? 'active' : '' %>" 
                                 data-src="/uploads/rooms/<%= photo.filename %>">
                                <img src="/uploads/rooms/<%= photo.filename %>" alt="thumb-<%= index %>">
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>

            <div class="content">
            <div class="title">
                <div>
                <h1><%= room.name %></h1>
                <div class="sub">
                    Gedung <%= room.gedung %> • Kode: <%= room.code || room.nomor_ruang %>
                </div>
                </div>

                <div style="text-align:right">
                <div class="muted">Kapasitas</div>
                <div style="font-weight:700"><%= room.capacity %> orang</div>
                </div>
            </div>

            <div class="meta">
                <div class="m">Jam Operasional: 07:00 — 21:00</div>
                <div class="m">Status: <%= room.is_active ? 'Aktif' : 'Non-Aktif' %></div> 
                <div class="m">Verifikasi: Manual oleh Admin</div>
            </div>

            <div class="two">
                <div>
                <h3 style="margin:0 0 8px 0">Fasilitas</h3>
                <ul class="list">
                    <% if (facilities && facilities.length > 0) { %>
                        <% facilities.forEach(item => { %>
                            <li>• <%= item.nama || item.name %></li> 
                        <% }) %>
                    <% } else { %>
                        <li>• Tidak ada data fasilitas</li>
                    <% } %>
                </ul>
                </div>

                <div>
                <h3 style="margin:0 0 8px 0">Deskripsi</h3>
                <div class="list">
                    <%= room.deskripsi || 'Belum ada deskripsi untuk ruangan ini.' %>
                </div>
                </div>
            </div>

            <div class="cta-row">
                <a href="#booking" class="btn primary">Pesan Sekarang</a>
            </div>

            <div style="margin-top:14px;display:flex;gap:12px">
                <div class="card" style="padding:12px;border-radius:10px;flex:1;background:#fbfbfe"> 
                <strong>Aturan Peminjaman</strong>
                <div class="muted" style="margin-top:8px">• Harap jaga kebersihan • Tidak memindah peralatan • Gunakan waktu sesuai izin</div>
                </div>

                <div class="card" style="padding:12px;border-radius:10px;flex:1;background:#fbfbfe">
                <strong>Catatan Ketersediaan</strong>
                <div class="muted" style="margin-top:8px">Lihat kalender pada bagian pemesanan untuk slot kosong. Sistem menolak tabrakan jadwal secara otomatis.</div>
                </div>
            </div>

            </div>
        </div>

        <div class="foot-cta">
            <div>
            <div style="font-weight:700">Butuh konfirmasi cepat?</div>
            <div class="muted">Hubungi admin ruang jika perlu verifikasi mendesak.</div>
            </div>
            <div><a href="#contact" class="btn" style="color:var(--muted);background:var(--card);border:1px solid #e7eafc;padding:10px 14px;border-radius:10px">Hubungi Admin</a></div>
        </div>
        </main>

        <aside class="aside">
        <div class="panel" id="booking">
            <div style="font-weight:700;margin-bottom:8px">Formulir Peminjaman</div>

            <script>
                // Script sederhana untuk mengambil parameter URL
                const urlParams = new URLSearchParams(window.location.search);
                const errorMsg = urlParams.get('error');
                const successMsg = urlParams.get('success');

                if (errorMsg) {
                    document.write(`<div style="background:#fee2e2; color:#991b1b; padding:10px; border-radius:6px; margin-bottom:10px; font-size:0.9rem;">⚠️ ${errorMsg}</div>`);
                    // Opsional: Hapus parameter dari URL agar bersih saat direfresh
                    window.history.replaceState(null, null, window.location.pathname);
                }
                if (successMsg) {
                    document.write(`<div style="background:#dcfce7; color:#166534; padding:10px; border-radius:6px; margin-bottom:10px; font-size:0.9rem;">✅ ${successMsg}</div>`);
                    window.history.replaceState(null, null, window.location.pathname);
                }
            </script>
            
            <form id="bookingForm" action="/booking/create" method="POST">
                <input type="hidden" name="room_id" value="<%= room.id %>">

                <div class="row">
                    <label for="date">Tanggal</label>
                    <input id="date" name="date" type="date" required />
                </div>

                <div style="display:flex;gap:8px">
                    <div style="flex:1" class="row">
                    <label for="start">Mulai</label>
                    <input id="start" name="start" type="time" required />
                    </div>
                    <div style="flex:1" class="row">
                    <label for="end">Selesai</label>
                    <input id="end" name="end" type="time" required />
                    </div>
                </div>

                <div class="row">
                    <label for="name">Penanggung Jawab</label>
                    <input id="name" name="name" type="text" value="<%= typeof user !== 'object' ? '' : user.name %>" placeholder="Nama / NIM / Organisasi" required />
                </div>

                <div class="row">
                    <label for="note">Catatan (opsional)</label>
                    <textarea id="note" name="note" rows="3" placeholder="Keperluan acara..."></textarea>
                </div>

                <div id="msg"></div>
                <button type="submit">Kirim Permintaan</button>
                <div class="small-info">Setelah dikirim, admin akan memverifikasi. Anda akan menerima notifikasi di dashboard atau email.</div>
            </form>

            <div class="similar">
                <h4 style="margin:12px 0 8px 0">Info Ruangan</h4>
                <div class="muted">ID Ruangan: #<%= room.id %></div>
            </div>
        </div>
        </aside>
    </div>
</div>

<script src="/js/detail_ruangan.js"></script>